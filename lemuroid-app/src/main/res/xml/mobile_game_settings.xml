<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:title="@string/game_menu_title">

    <Preference
        android:key="pref_game_section_save"
        android:title="@string/game_menu_save"
        app:icon="@drawable/ic_menu_save"/>

    <Preference
        android:key="pref_game_section_load"
        android:title="@string/game_menu_load"
        app:icon="@drawable/ic_menu_load"/>

    <Preference
        android:key="pref_game_quit"
        android:title="@string/game_menu_quit"
        app:icon="@drawable/ic_menu_quit"/>

    <Preference
        android:key="pref_game_reset"
        android:title="@string/game_menu_restart"
        app:icon="@drawable/ic_menu_restart"/>

    <SwitchPreference
        android:key="pref_game_mute"
        android:title="@string/game_menu_mute_audio"
        app:icon="@drawable/ic_menu_mute"/>

    <SwitchPreference
        android:key="pref_game_fast_forward"
        android:title="@string/game_menu_fast_forward"
        app:icon="@drawable/ic_menu_fast_forward"/>

    <ListPreference
        android:key="pref_game_section_change_disk"
        android:title="@string/game_menu_change_disk_button"
        app:isPreferenceVisible="false"
        app:icon="@drawable/ic_menu_disk"/>

    <Preference
        android:key="pref_game_edit_touch_controls"
        android:title="@string/game_menu_edit_touch_controls"
        app:icon="@drawable/ic_menu_touch"/>

    <Preference
        android:key="pref_game_section_core_options"
        android:title="@string/game_menu_settings"
        app:icon="@drawable/ic_menu_settings"/>

    <ListPreference
        android:key="pref_game_controller_1"
        android:title="Game Controller 1"
        app:isPreferenceVisible="false"
        app:icon="@drawable/ic_favorite_black_24dp"/>

</PreferenceScreen>
